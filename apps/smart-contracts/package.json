{
  "name": "smart-contracts",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "account": "hardhat account",
    "accounts": "hardhat accounts",
    "balance": "hardhat balance",
    "dev": "ts-node scripts/start.ts && hardhat node --network hardhat --export-all ../frontend/generated/contracts/hardhat_contracts.json",
    "compile": "hardhat compile --force",
    "deploy": "hardhat deploy --reset --export-all ../frontend/generated/contracts/hardhat_contracts.json",
    "generate": "hardhat generate",
    "postdeploy": "hardhat run scripts/publish.ts",
    "send": "hardhat send",
    "test": "hardhat test --network hardhat",
    "watch": "ts-node scripts/watch.ts"
  },
  "dependencies": {
    "@nomiclabs/hardhat-ethers": "2.2.1",
    "@nomiclabs/hardhat-etherscan": "3.1.3",
    "@nomiclabs/hardhat-waffle": "2.0.3",
    "@openzeppelin/contracts": "4.8.0",
    "@tenderly/hardhat-tenderly": "1.3.2",
    "chai": "4.3.7",
    "chalk": "4.1.0",
    "dotenv": "16.0.3",
    "ethers": "5.7.2",
    "hardhat": "2.12.3",
    "hardhat-abi-exporter": "2.10.1",
    "hardhat-deploy": "0.11.22",
    "hardhat-gas-reporter": "1.0.9",
    "node-watch": "0.7.3",
    "shared-constants": "*",
    "ts-node": "10.9.1"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "10.1.1",
    "@types/node": "18.11.11",
    "solium": "1.2.5",
    "solium-config-dyor": "*",
    "tsconfig": "*",
    "typechain": "8.1.1",
    "typescript": "4.9.3"
  }
}
